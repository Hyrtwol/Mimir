{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "odin run",
			"type": "process",
			"command": "odin",
			"args": [
				"run",
				"..\\${relativeFileDirname}",
				"${config:odin.rc}",
				"${config:odin.shared}",
				"${config:odin.libs}",
				"-vet",
				"-strict-style",
				"-o:speed"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": "**/*.odin"
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin build",
			"type": "process",
			"command": "odin",
			"args": [
				"build",
				"..\\${relativeFileDirname}",
				"${config:odin.rc}",
				"${config:odin.shared}",
				"${config:odin.libs}",
				"-vet",
				"-strict-style",
				"-o:speed"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin test",
			"type": "shell",
			"command": "odin",
			"args": [
				"test",
				".",
				"${config:odin.shared}",
				"${config:odin.libs}"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${relativeFileDirname}"
			}
		},
		{
			"label": "odin debug build",
			"type": "process",
			"command": "odin",
			"args": [
				"build",
				"..\\${relativeFileDirname}",
				"${config:odin.rc}",
				"${config:odin.shared}",
				"${config:odin.libs}",
				"-vet",
				"-strict-style",
				"-debug"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin check",
			"type": "process",
			"command": "odin",
			"args": [
				"check",
				"..\\${relativeFileDirname}",
				"${config:odin.rc}",
				"${config:odin.shared}",
				"${config:odin.libs}",
				"-vet",
				"-strict-style",
				"-no-entry-point"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin strip semicolon",
			"type": "shell",
			"command": "odin",
			"args": [
				"strip-semicolon",
				"..\\${relativeFileDirname}",
				"${config:odin.shared}",
				"${config:odin.libs}",
				"-no-entry-point"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "odin doc",
			"type": "shell",
			"command": "odin",
			"args": [
				"doc",
				"..\\${relativeFileDirname}", //"-doc-format",
				"${config:odin.shared}",
				"${config:odin.libs}",
				">",
				"${fileDirnameBasename}.txt"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "format",
			"type": "process",
			"command": "${config:odin.odinfmt}",
			"args": [
				"-w",
				"${workspaceFolder}\\${relativeFile}"
			],
			"problemMatcher": [],
			"group": {
				"kind": "none",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}\\${relativeFileDirname}"
			}
		},
		{
			"label": "echo vars",
			"type": "shell",
			"command": "echo",
			"args": [
				"vars:",
				"${workspaceFolder}",
				//"${workspaceFolder:src}",
				"${cwd}",
				"${relativeFile}",
				"${relativeFileDirname}",
				"${env:ODIN_ROOT}",
				"${env:ODIN_SHARED}",
				"${config:editor.wordWrapColumn}",
				"${config:cSpell.enableFiletypes}",
				"${config:odin.shared}",
				"${config:odin.libs}",
				"${config:odin.odinfmt}",
				"${config:odin.flags}"
			],
			"group": {
				"kind": "none",
				"isDefault": false
			},
			"problemMatcher": [],
			"options": {
				"cwd": "bin"
			}
		},
		{
			"label": "clean up",
			"type": "shell",
			"command": "build_cleanup",
			"args": [],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "build docs",
			"type": "shell",
			"command": "build",
			"args": [],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}/doc"
			}
		},
		{
			"label": "pandoc md",
			"type": "shell",
			"command": "pandoc",
			"args": [
				//"--help"
				"-o",
				"${fileBasenameNoExtension}.html",
				"-f",
				"markdown",
				"-t",
				"html",
				"../${relativeFile}"
			],
			"group": {
				"kind": "build",
				"isDefault": "**/*.md"
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		}
	]
}
