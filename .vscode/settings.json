{
    "editor.wordWrapColumn": 200,
    "editor.rulers": [
        200
    ],
    "cSpell.words": [
        "codepage",
        "dxgi",
        "fmodex",
        "hbitmap",
        "hlsl",
        "libfmodex",
        "localizable",
        "metaprogramming",
        "microarch",
        "pixelshader",
        "rasterizer",
        "rawptr",
        "reloc",
        "rendertarget",
        "shadowmap",
        "srgb",
        "struct",
        "subresource",
        "tprintf",
        "typeless",
        "unorm"
    ],
    "markdownlint.config": {
        "no-hard-tabs": false,
        "line-length": false
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "omnisharp.autoStart": false,
    "typescript.tsc.autoDetect": "off",
    "npm.autoDetect": "off",
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/desktop.ini": true
    },
    "files.associations": {
        "*.lst": "plaintext",
        "*.fdp": "xml"
    },
    "workbench.editorAssociations": {
        "*.fsb": "hexEditor.hexedit",
        "*.fev": "hexEditor.hexedit",
        "*.res": "hexEditor.hexedit"
    },
    "cSpell.enableFiletypes": [
        "odin"
    ],
}
